{
  "name": "otp-service",
  "version": "1.0.0",
  "description": "OTP Service for Tricykol Driver App",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "deploy": "gcloud run deploy otp-service --source . --region asia-southeast1 --set-secrets SEMAPHORE_API_KEY=semaphore-api-key:latest --allow-unauthenticated",
    "logs": "gcloud logging read \"resource.type=cloud_run_revision AND resource.labels.service_name=otp-service\" --limit=50"
  },
  "engines": {
    "node": "18.x"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase-admin": "^11.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "private": true
}
